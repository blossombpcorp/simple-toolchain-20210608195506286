type Query {
    users(firstNameFilter: String): [User]
}

type Mutation {
  addUser(user: UserInput): User
}

type User {
	firstName:String!
	lastName:String!
	middleName:String
	nickName:String!
	age:Int!
	preferredLanguage:String
	email:String!
	}
	
	
input UserInput {
	firstName:String!
	lastName:String!
	middleName:String
	nickName:String!
	age:Int!
	preferredLanguage:String
	email:String!
	}
	